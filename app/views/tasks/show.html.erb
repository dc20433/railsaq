<h1>View Task</h1>

<%= render @task %>

<%= link_to "Edit Task", edit_task_path(@task) %> |
<%= link_to "All Tasks", tasks_path %> |
<%= link_to "Notes", task_notes_path(@task) %>
<%= button_to "Delete Task", task_path(@task), method: :delete, class:"btn btn-danger mt-3", form: { data: {turbo_confirm: "Are you sure?" } } %>

