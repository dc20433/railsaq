<h1>Patients</h1>

<p><%= link_to "New Patient", new_task_path, class:"btn btn-outline-dark" %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Due Date</th>
      <th scope="col">Priority</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= link_to_unless_current task.name, task_path(task.id) %></td>
      <td><%= task.due_date %></td>
      <td><%= task.priority %></td>
      <td><%= link_to "Records", task_notes_path(task.id), class:'btn btn-success' %> <%= link_to "Charts", task_notes_path(task.id), class:'btn btn-info' %> <%= link_to "Print Ins", "#", class:'btn btn-warning' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
